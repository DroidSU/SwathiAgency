<resources>

    <style name="Widget.Theme.SwathiAgency.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Custom Text Appearance for Bottom Navigation Active Item -->
    <style name="BottomNavTextAppearanceActive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/active_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Custom Text Appearance for Bottom Navigation Inactive Item -->
    <style name="BottomNavTextAppearanceInactive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/inactive_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item> <!-- Change this to your desired color -->
    </style>
</resources>