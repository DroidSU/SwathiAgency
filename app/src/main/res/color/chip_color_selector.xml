<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when chip is selected -->
    <item android:state_checked="true" android:color="@color/light_blue_600" />
    <!-- Color when chip is pressed (optional) -->
    <item android:state_pressed="true" android:color="@color/light_blue_600" />
    <!-- Default chip color -->
    <item android:color="@color/white" />
</selector>