<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/rounded_corner_black_border">

    <ImageView
        android:id="@+id/iv_dismiss_dialog"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_discount_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discounts"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_discount_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coupon Discount"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_coupon_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/_0000"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_header"
        app:layout_constraintStart_toEndOf="@id/tv_discount_coupon"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corner_black_border"
        android:padding="4dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>


    <TextView
        android:id="@+id/tv_bill_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Discount"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_header"
        app:layout_constraintEnd_toStartOf="@id/et_bill_discount"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/et_bill_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/_0000"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_header"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner_black_border"
        android:padding="4dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>


    <TextView
        android:id="@+id/tv_display_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Discount"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_coupon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_display_discount"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_display_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/_0000"
        app:layout_constraintTop_toBottomOf="@id/et_coupon_discount"
        app:layout_constraintStart_toEndOf="@id/tv_display_discount"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_black_border"
        android:padding="4dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/tv_other_less_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Less"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_display_discount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv_sale_return_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale Return Value"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_other_less_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_sale_return_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/_0000"
        app:layout_constraintTop_toBottomOf="@id/tv_other_less_header"
        app:layout_constraintStart_toEndOf="@id/tv_sale_return_value"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corner_black_border"
        android:padding="4dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/tv_other_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Discounts"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/et_other_discounts"
        app:layout_constraintTop_toBottomOf="@id/tv_other_less_header"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/et_other_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/_0000"
        app:layout_constraintTop_toBottomOf="@id/tv_other_less_header"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner_black_border"
        android:padding="4dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>


    <EditText
        android:id="@+id/et_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_return_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:hint="Remarks : "
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/ll_amount_collected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_remarks"
        app:layout_constraintEnd_toStartOf="@+id/btn_complete_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_amount_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Collected"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_amount_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/_0000"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corner_black_border"
            android:padding="4dp"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_complete_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_amount_collected"
        app:layout_constraintTop_toBottomOf="@id/et_remarks"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>